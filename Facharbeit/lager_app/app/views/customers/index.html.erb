<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table border="3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>Plz</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Dse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.street %></td>
        <td><%= customer.city %></td>
        <td><%= customer.plz %></td>
        <td><%= customer.tel %></td>
        <td><%= customer.email %></td>
        <td><%= customer.dse %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

